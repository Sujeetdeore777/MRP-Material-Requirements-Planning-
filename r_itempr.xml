	<report 
		id="action_report_prprint"
		string="Production Process Report"
		model="simrp.item" 
		report_type="qweb-pdf"
		file="simrp.prprint" 
		name="simrp.prprint"
		print_report_name="'%s' % (object.name)"
	/>

</odoo>
